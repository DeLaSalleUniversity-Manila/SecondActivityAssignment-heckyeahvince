<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.heckyeahvince.weekday.SecondActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:maxHeight="375dp"
        android:maxWidth="751dp"
        android:minHeight="375dp"
        android:minWidth="751dp"
        android:layout_gravity="top|center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayDay"
        android:textSize="36dp"
        android:textColor="#FFFFFF"
        android:text=""
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(c) Abe"
        android:id="@+id/nameTag"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:onClick="onClickCompute"
        android:textSize="10dp" />

</LinearLayout>
